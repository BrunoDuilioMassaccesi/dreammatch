@{
    ViewData["Title"] = "Pruebas";
}
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pruebas</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body class = "Pruebasbody">
<div class="container mt-5">
  <div class="row">
    
    <!-- Card 1: Pruebas Realizadas -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Pruebas realizadas</h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <img src="../img/independiente.png" alt="Icono" class="mr-2">
              <div class="nico"> 21/09 Prueba realizada con éxito</div>
            </li>
            <li class="mb-2">
              <img src="../img/allboys.png" alt="Icono" class="mr-2">
              <div class="nico"> 17/09 Prueba realizada con éxito</div>
            </li>
            <li>
              <img src="../img/banfield.png" alt="Icono" class="mr-2">
              <div class="nico"> 11/09 Prueba realizada con éxito</div>
            </li>
          </ul>
          <a href="@Url.Action("Pruebasrealizadas","Account")" class="btn btn-primary btn-block">Ver más</a>
        </div>
      </div>
    </div>

    <!-- Card 2: Pruebas Disponibles -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Pruebas disponibles</h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <img src="../img/atlanta.png" alt="Icono" class="mr-2">
              <div class="nico"> 27/09 Categoría 2007/2008</div>
            </li>
            <li class="mb-2">
              <img src="../img/ferro.png" alt="Icono" class="mr-2">
              <div class="nico"> 25/09 Categoría 2006/2007</div>
            </li>
            <li>
              <img src="../img/river.png" alt="Icono" class="mr-2">
              <div class="nico"> 03/10 Categoría 2007</div>
            </li>
          </ul>
          <a href="@Url.Action("PruebasDisponibles","Home")" class="btn btn-primary btn-block">Ver más</a>
        </div>
      </div>
    </div>

    <!-- Card 3: Pruebas Recomendadas -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Pruebas recomendadas</h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <img src="../img/gimnasia.png" alt="Icono" class="mr-2">
              <div class="nico"> 24/09 Prueba recomendada</div>
            </li>
            <li class="mb-2">
              <img src="../img/allboys.png" alt="Icono" class="mr-2">
              <div class="nico"> 17/09 Prueba recomendada</div>
            </li>
            <li>
              <img src="../img/banfield.png" alt="Icono" class="mr-2">
              <div class="nico"> 11/09 Prueba recomendada</div>
            </li>
          </ul>
          <a href="@Url.Action("PruebasRecomendadas","Home")" class="btn btn-primary btn-block">Ver más</a>
        </div>
      </div>
    </div>

    <!-- Card 4: Pruebas Agendadas -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Pruebas agendadas</h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <img src="../img/atlanta.png" alt="Icono" class="mr-2">
              <div class="nico"> Prueba agendada para el 27/09</div>
            </li>
            <li>
              <img src="../img/sanlorenzo.png" alt="Icono" class="mr-2">
              <div class="nico" > Prueba agendada para el 04/10</div>
            </li>
          </ul>
          <a href="@Url.Action("PruebasAgendadas","Account")" class="btn btn-primary btn-block">Ver más</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</script>
</body>

